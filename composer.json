{
    "name": "deweppro/patterns",
    "description": "php patterns",
    "keywords": [
        "singleton",
        "mvc",
        "pattern"
    ],
    "homepage": "https://framework.dewep.pro",
    "support": {
        "issues": "https://github.com/deweppro/patterns/issues",
        "source": "https://github.com/deweppro/patterns"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Mikhail Knyazhev",
            "email": "markus621@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dewep\\": "src/Dewep/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dewep\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phpstan/phpstan": "^0.10"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.2.0"
        }
    },
    "scripts": {
        "lint": [
            "php vendor/bin/phpstan analyse -c phpstan.neon -l max src"
        ],
        "test": [
            "php vendor/bin/phpunit"
        ]
    }
}
